<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrar_lavagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fga.unb.desenho20162.lavajato.view.CadastroLavagemActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Cliente"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:textSize="24sp"
            android:id="@+id/nome_cliente"
            android:textColor="@color/bodyTextColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            android:id="@+id/nomeCliente"
            tools:ignore="HardcodedText"
            tools:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:ems="10"
            android:id="@+id/telefoneCliente"
            tools:inputType="phone"
            android:inputType="phone"
            />

        <TextView
            android:text="VeÃ­culo"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText"
            android:textSize="24sp"
            android:textColor="@color/bodyTextColor"/>

        <Spinner
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:id="@+id/tipoVeiculo"
            android:ems="10"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Placa"
            android:ems="10"
            android:id="@+id/placaVeiculo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Cor"
            android:ems="10"
            android:id="@+id/corVeiculo"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Marca"
            android:ems="10"
            android:id="@+id/marcaVeiculo"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo"
            android:ems="10"
            android:id="@+id/modeloVeiculo"
            tools:ignore="HardcodedText"
            android:inputType="text" />

        <TextView
            android:text="Tipo de Lavagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:ignore="HardcodedText"
            android:textColor="@color/bodyTextColor"
            android:textSize="24sp"/>

        <Spinner
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/tipoLavagem"
            android:ems="10"
            android:layout_marginBottom="18dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancelar"
            tools:ignore="HardcodedText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttonCandastrar"
            android:layout_toEndOf="@+id/buttonCandastrar"/>

        <Button
            android:text="Cadastrar"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCandastrar"
            tools:ignore="RelativeOverlap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="175dp"/>

    </RelativeLayout>

</RelativeLayout>
