<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_funcionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fga.unb.desenho20162.lavajato.view.CadastroFuncionarioActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Dados do funcionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idFuncionario"
            android:textSize="30sp"/>

        <EditText
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            tools:ignore="HardcodedText"
            tools:inputType="textPersonName"
            android:id="@+id/nomeFuncionario"/>

        <EditText
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:ems="10"
            tools:inputType="phone"
            android:inputType="phone"
            android:id="@+id/telefoneFuncionario"/>

        <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="CPF"
            android:ems="10"
            android:id="@+id/cpfFuncionario"
            tools:ignore="HardcodedText"
            tools:inputType="textPersonName" />

        <TextView
            android:text="Sexo"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"/>

        <Spinner
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/sexoFuncionario"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Endereco"
            android:ems="10"
            android:id="@+id/enderecoFuncionario"
            tools:ignore="HardcodedText"
            tools:inputType="textPersonName" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Cadastrar"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCandastrarFuncionario"
            tools:ignore="RelativeOverlap"
            android:layout_width="175dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp"
            android:layout_toLeftOf="@+id/buttonCancelar"
            android:layout_toStartOf="@+id/buttonCancelar"/>

        <Button
            android:text="Cancelar"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancelar"
            tools:ignore="HardcodedText"
            android:layout_alignBaseline="@+id/buttonCandastrarFuncionario"
            android:layout_alignBottom="@+id/buttonCandastrarFuncionario"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>
