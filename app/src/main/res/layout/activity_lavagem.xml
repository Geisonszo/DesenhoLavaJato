<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lavagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fga.unb.desenho20162.lavajato.view.Lavagem">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_tipo_lavagem"
            android:layout_weight="0.07"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="104dp"
            app:srcCompat="@drawable/com_facebook_auth_dialog_background"
            android:id="@+id/lavagem_tamanho"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_nome_cliente"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_telefone_cliente"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_veiculo_marca"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_veiculo_modelo"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_veiculo_cor"
            android:layout_weight="0.07"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lavagem_veiculo_placa"
            android:layout_weight="0.07"/>

    </LinearLayout>
</RelativeLayout>
