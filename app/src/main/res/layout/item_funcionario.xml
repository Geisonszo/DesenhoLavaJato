<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_above="@+id/button4"/>

            <TextView
                android:text="Nome do FuncionÃ¡rio"
                android:layout_width="match_parent"
                android:id="@+id/item_nome_funcionario"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView4"
                android:textSize="30sp"
                android:layout_height="80dp"/>

            <TextView
                android:text="Tel: "
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/TELEFONE"
                android:layout_below="@+id/item_nome_funcionario"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:textSize="24sp"/>

            <TextView
                android:text="Telfone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/TELEFONE"
                android:layout_toRightOf="@+id/TELEFONE"
                android:layout_below="@+id/item_nome_funcionario"
                android:textSize="24sp"
                android:textAlignment="center"
                android:id="@+id/item_telefone_funcionario"/>

            <Button
                android:text="Ponto entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="23dp"
                android:layout_marginEnd="23dp"
                android:id="@+id/btn_ponto_entrada"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>