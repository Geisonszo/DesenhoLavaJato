<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TIPO LAVAGEM"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:id="@+id/idTipoLavagem"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:background="@color/com_facebook_blue"
                android:layout_toRightOf="@+id/tipo_lavagem"
                android:layout_toEndOf="@+id/tipo_lavagem"
                android:textColor="@color/buttonTextColor"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/imageTipo"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/idTipoLavagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:text="Placa:"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/placa"
                android:layout_alignTop="@+id/idPlaca"
                android:layout_toRightOf="@+id/imageTipo"
                android:layout_alignBottom="@+id/idPlaca"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:layout_alignRight="@+id/cliente"
                android:layout_alignEnd="@+id/cliente"/>

            <TextView
                android:text="placa"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:id="@+id/idPlaca"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_below="@+id/idTipoLavagem"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/com_facebook_auth_dialog_corner_radius_oversized"
                android:layout_toRightOf="@+id/placa"
                android:layout_toEndOf="@+id/placa"
                android:layout_above="@+id/idNome"/>

            <TextView
                android:text="Tipo lavagem:"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/tipo_lavagem"
                android:background="@color/com_facebook_blue"
                android:textColor="@color/buttonTextColor"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="@dimen/com_facebook_auth_dialog_corner_radius_oversized"
                android:paddingRight="@dimen/com_facebook_auth_dialog_corner_radius_oversized"
                android:paddingStart="@dimen/com_facebook_auth_dialog_corner_radius_oversized"/>

            <TextView
                android:text="Cor: "
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/cor"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/fone"
                android:layout_alignEnd="@+id/fone"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imageTipo"
                android:layout_toEndOf="@+id/imageTipo"/>

            <TextView
                android:text="marca"
                android:id="@+id/idMarca"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_above="@+id/cor"
                android:layout_toLeftOf="@+id/idModelo"
                android:layout_toRightOf="@+id/imageTipo"
                android:layout_toEndOf="@+id/imageTipo"
                android:layout_height="20dp"/>

            <TextView
                android:text="Cliente: "
                android:layout_width="wrap_content"
                android:id="@+id/cliente"
                android:layout_height="20dp"
                android:layout_above="@+id/idTelefone"
                android:layout_toRightOf="@+id/imageTipo"
                android:layout_toEndOf="@+id/imageTipo"/>

            <TextView
                android:text="Nome"
                android:layout_width="100dp"
                android:id="@+id/idNome"
                android:textSize="12sp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/cliente"
                android:layout_alignBottom="@+id/cliente"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/placa"
                android:layout_toEndOf="@+id/placa"/>

            <TextView
                android:text="cor"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/idCor"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:layout_alignBaseline="@+id/cor"
                android:layout_alignBottom="@+id/cor"
                android:layout_toRightOf="@+id/cor"
                android:layout_toEndOf="@+id/cor"/>

            <TextView
                android:text="Telefone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/idTelefone"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:layout_alignBaseline="@+id/fone"
                android:layout_alignBottom="@+id/fone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/cliente"
                android:layout_toEndOf="@+id/cliente"/>

            <TextView
                android:text="Fone: "
                android:layout_width="wrap_content"
                android:id="@+id/fone"
                android:layout_height="20dp"
                android:layout_above="@+id/idMarca"
                android:layout_toRightOf="@+id/imageTipo"
                android:layout_toEndOf="@+id/imageTipo"/>

            <TextView
                android:text="modelo"
                android:layout_width="90dp"
                android:id="@+id/idModelo"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/idMarca"
                android:layout_alignBottom="@+id/idMarca"
                android:layout_alignLeft="@+id/idTelefone"
                android:layout_alignStart="@+id/idTelefone"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>